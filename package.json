{
  "name": "mrs-developer",
  "version": "1.4.0",
  "description": "manage NPM dependencies as Git repositories",
  "bin": {
    "missdev": "src/command.js"
  },
  "main": "src/index.js",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha"
  },
  "keywords": [
    "multirepo",
    "git",
    "npm",
    "dependencies"
  ],
  "author": "Eric BREHAULT",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/collective/mrs-developer.git"
  },
  "bugs": {
    "url": "https://github.com/collective/mrs-developer/issues"
  },
  "homepage": "https://github.com/collective/mrs-developer#readme",
  "eslintConfig": {
    "extends": [
      "node",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "import/no-commonjs": 0,
      "no-sync": 0,
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "colors": "^1.3.3",
    "simple-git": "^2.21.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.12.1",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^6.1.4",
    "mock-fs": "^4.10.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2"
  }
}
